  accionTexto String? // Texto del bot√≥n de acci√≥n

  // Auditor√≠a
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([usuarioId, leida, createdAt(sort: Desc)])
  @@index([entidadTipo, entidadId])
  @@map("notificaciones")
}

